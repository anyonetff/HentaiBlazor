@using HentaiBlazor.Data.Comic

@inherits FeedbackComponent<string, string>

<Form Model="@videoEntity"
      LabelCol="new ColLayoutParam { Span = 4 }"
      WrapperCol="new ColLayoutParam { Span = 20 }"
      OnFinish="OnFinish"
      OnFinishFailed="OnFinishFailed">

    <FormItem Label="路径">
        <span>@context.Path</span>
    </FormItem>
    <FormItem Label="名称">
        <span>@context.Name</span>
    </FormItem>

    <FormItem Label="标题">
        <Input @bind-Value="@context.Title" />
    </FormItem>
    <FormItem Label="作者">
        <Input @bind-Value="@context.Producer" />
    </FormItem>
    <FormItem Label="语言">
        <Select @bind-Value="@context.Language"
                TItemValue="string" TItem="string">
            <SelectOptions>
                <SelectOption TItemValue="string" TItem="string" Value="@("ja")" Label="日本語" />
                <SelectOption TItemValue="string" TItem="string" Value="@("zh")" Label="中文" />
                <SelectOption TItemValue="string" TItem="string" Value="@("en")" Label="English" />
            </SelectOptions>
        </Select>
    </FormItem>

    <FormItem Label="备注">
        <TextArea MinRows="2" MaxRows="6" @bind-Value="@context.Note" />
    </FormItem>

    <FormItem WrapperCol="new ColLayoutParam{ Offset = 4, Span = 20 }">
        <Button Type="@ButtonType.Primary" HtmlType="submit">
            提交
        </Button>
    </FormItem>

</Form>