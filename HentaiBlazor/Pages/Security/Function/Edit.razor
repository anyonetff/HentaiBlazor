@using HentaiBlazor.Data.Basic;
@using System.ComponentModel.DataAnnotations
@using System.Text.Json

@inherits ModalTemplate<string>

<Form Model="@functionEntity"
      LabelCol="new ColLayoutParam { Span = 8 }"
      WrapperCol="new ColLayoutParam { Span = 16 }"
      OnFinish="OnFinish"
      OnFinishFailed="OnFinishFailed">

    <FormItem Label="编号">
        <Input @bind-Value="@context.Id" />
    </FormItem>
    <FormItem Label="上级">
        <Input @bind-Value="@context.Parent" />
    </FormItem>
    <FormItem Label="叶子">
        <InputCheckbox @bind-Value="@context.Leaf"/>
    </FormItem>
    <FormItem Label="名称">
        <Input @bind-Value="@context.Name" />
    </FormItem>
    <FormItem Label="路径">
        <Input @bind-Value="@context.Path" />
    </FormItem>
    <FormItem Label="图标">
        <Input @bind-Value="@context.Icon" />
    </FormItem>
    <FormItem Label="备注">
        <TextArea MinRows="2" MaxRows="6" @bind-Value="@context.Note" />
    </FormItem>

    <Divider />

    <FormItem WrapperCol="new ColLayoutParam{ Offset = 8, Span = 16 }">
        <Button Type="@ButtonType.Primary" HtmlType="submit">
            提交
        </Button>
    </FormItem>

</Form>
